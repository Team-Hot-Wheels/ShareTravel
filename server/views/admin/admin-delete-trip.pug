include admin-main.pug
 h2 Choose a trip 
  if (data)
   table.table.table-striped
    thead
     tr 
      th Trip Id:
      th Trip From:
      th Trip To:
      th Trip Username:
      th Action:
    tbody  
        each trip in data
            tr
            td= trip.id
            td= trip.from
            td= trip.to
            td= trip.date
            td= trip.username
            td 
             form(method="post" action="/admin/admin-delete-trip") 
              input(type="hidden" value=trip.id name="id")
              button(type="submit" class="btn btn-default btn-danger") Delete