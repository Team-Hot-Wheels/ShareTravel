extends ../shared/layout
block main-content
      h1 All Trips
      if data
      div.row.container
        each trip in data.pagedTrips
         .row.trip-item.container
            a(href='/trips/'+ trip._id)
              .col-md-2
                i.fa.fa-user(aria-hidden='true')
                span= trip.username
              .col-md-8
                .col-md-12.trip-date
                  i.fa.fa-calendar-o(aria-hidden='true')
                  span= trip.humanDate
                .col-md-12.trip-from-to
                 span= trip.from
                 |   ->  
                 span= trip.to
                .col-md-12
                  i.fa.fa-map-marker.trip-from(aria-hidden='true')
                  span= trip.from
                .col-md-12
                  i.fa.fa-map-marker.trip-to(aria-hidden='true')
                  span= trip.to
              .col-md-2             
                div.trip-price.text-right= trip.price
                   span  lv
                 
                div.trip-seats.text-right= trip.slots
                div.text-right seats available
        
      div.row
            ul.pagination
                - for (var x = 0; x < data.totalPages; x++)
                    if(x==data.pageNumber)
                        li.active
                            a(href='/trips?pageNumber='+x)  #{x+1}
                    else
                        li
                            a(href='/trips?pageNumber='+x)  #{x+1}
      