extends ../shared/layout
block main-content
    .row
        .col-md-8.col-md-offset-2
            .panel.panel-default
                .panel-heading.text-center Add a new trip
                .panel-body
                    .col-md-12
                        #map
                    br
                    .col-md-12
                    form.form-default(method="post" action="/trips/create")
                        .col-md-6
                            .form-group
                                .col-md-12
                                    input.form-control(type="text" name="from" id="from" class="form-control" placeholder="From" required="required")
                            .form-group
                                .col-md-12
                                    input.form-control(type="text" name="to" id="to" class="form-control" placeholder="To" required="required")
                        .col-md-6
                            .form-group
                                .col-md-12
                                    input.form-control(type="text" onfocus="(this.type='date')" name="date" id="date" class="form-control" placeholder="Trip Date" required="required")

                            .form-group
                                .col-md-6
                                    input.form-control(type="number" min="0" name="price"  id="price" class="form-control" placeholder="Price pro person" required="required")
                                .col-md-6
                                    input.form-control(type="number" min="1" name="slots" id="slots" class="form-control" placeholder="Free Slots" required="required")
                        .col-md-12
                            .form-group
                                .col-md-12
                                    textarea.form-control(id="description" name="description" class="form-control" rows=8 placeholder="Description" required="required")
                        .col-md-12
                            .form-group
                                button.btn.btn-primary.btn-create.col-md-12(type="submit" class="btn btn-primary") Create
block footer-js
    script(src='/js/maps.js')
    script(async defer src='https://maps.googleapis.com/maps/api/js?key=AIzaSyBlEvejcGuKOU6J8TkM-1lDbjaXpl9SIzg&libraries=places&callback=initMap')
