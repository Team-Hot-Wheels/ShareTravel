extends ../shared/layout
block main-content
 .container
  .row
   .col-md-4.col-md-offset-4
    .panel.panel-default
      .panel-heading.text-center Log In
      .panel-body   

        form.form-default(method="post" action="/users/authenticate")
          .form-group
            label.control-label(for="username") Username
            input.form-control(type="text" name="username" id="username")
          .form-group
            label.control-label(for="password") Password
            input.form-control(type="password" name="password" id="password")
          .form-group
            button.btn.btn-primary.btn-login.col-md-12(type="submit")  Log In