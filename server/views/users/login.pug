extends ../shared/layout
block main-content
 .container
  .row
   .col-md-4.col-md-offset-4
    .panel.panel-default
      .panel-heading Log In
      .panel-body  

        form.form-horizontal(method="post" action="/users/authenticate")
          .form-group
            label.control-label.col-md-3(for="username") Username
            .col-md-9
             input.form-control(type="text" name="username" id="username")
          .form-group
            label.control-label.col-md-3(for="password") Password
            .col-md-9
             input.form-control(type="password" name="password" id="password")
          .form-group
            .col-md-9.col-md-offset-3
             input.btn.btn-default.btn-primary(type="submit" value="Log In")